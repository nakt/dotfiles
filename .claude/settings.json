{
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  },
  "alwaysThinkingEnabled": true,
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowedDomains": [
        "github.com",
        "api.github.com",
        "npmjs.org",
        "registry.npmjs.org",
        "pypi.org",
        "rubygems.org",
        "crates.io"
      ]
    }
  },
  "permissions": {
    "allow": [
      "Bash(ls *)",
      "Bash(mv *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(chmod *)",
      "Bash(chown *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(less *)",
      "Bash(more *)",
      "Bash(wc *)",
      "Bash(sort *)",
      "Bash(uniq *)",
      "Bash(cut *)",
      "Bash(awk *)",
      "Bash(sed *)",
      "Bash(tar *)",
      "Bash(gzip *)",
      "Bash(gunzip *)",
      "Bash(zip *)",
      "Bash(unzip *)",
      "Bash(ps *)",
      "Bash(top *)",
      "Bash(which *)",
      "Bash(whereis *)",
      "Bash(whoami)",
      "Bash(pwd)",
      "Bash(du *)",
      "Bash(df *)",
      "Bash(date *)",
      "Bash(echo *)",
      "Bash(printf *)",
      "Bash(history *)",
      "Bash(alias *)",
      "Bash(env *)",
      "Bash(export *)",
      "Bash(source *)",
      "Bash(ln *)",
      "Bash(touch *)",
      "Bash(file *)",
      "Bash(stat *)",
      "Bash(diff *)",
      "Bash(cmp *)",
      "Bash(rsync *)",
      "Bash(ping *)",
      "Bash(netstat *)",
      "Bash(lsof *)",
      "Bash(rm *)",
      "Bash(gh pr *)",
      "Bash(gh issue *)",
      "Bash(git checkout *)",
      "Bash(git add *)",
      "Bash(git remote *)",
      "Bash(git pull *)",
      "Bash(git cherry-pick *)",
      "WebSearch",
      "WebFetch"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(git reset --hard *)",
      "Bash(git rebase *)",
      "Bash(docker rm *)",
      "Bash(docker rmi *)",
      "Bash(npm publish *)",
      "Bash(gh pr merge *)"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(~/.ssh/**)",
      "Read(**/*_rsa)",
      "Read(**/*_ed25519)",
      "Read(**/*.pem)",
      "Read(**/*credential*)",
      "Read(**/*secret*)",
      "Bash(sudo *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(nc *)",
      "Bash(ssh *)",
      "Bash(scp *)",
      "Bash(sftp *)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/validate-rm.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash(git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/check-arch-docs.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Sosumi.aiff || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Blow.aiff || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/lint-markdown.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/open-plan-vscode.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": [],
    "context7@claude-plugins-official": []
  },
  "language": "Japanese",
  "plansDirectory": ".claude/plans"
}
